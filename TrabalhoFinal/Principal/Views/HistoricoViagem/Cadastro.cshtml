
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div>
    <div class="col-md-12">
        <h5 class="text-primary text-center">Cadastro Historico de Viagem</h5>
        <br />
    </div>
</div>

<form action="/HistoricoViagem/Store" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nome-campo-idpacote">Pacote</label>
            <select name="HistoricoViagem.IdPacote" type="text" id="select-cadastro-historico-viagem-idpacote" class="form-control"
                    ></select>
        </div>

        <div class="form-group col-md-6">
            <label for="nome-campo-data">Data</label>
            <input name="HistoricoViagem.Data" type="date" id="campo-cadastro-historico-viagem-data" class="form-control"
                    />
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-outline-success float-right">
                <i class="fa fa-save">Cadastrar</i> 
            </button>
        </div>

    </div>
</form>

@section script{
    <script src="~/Scripts/PopularSelects/SelectHistoricoViagem/popular-select-historicoViagem.js"></script>
    }



