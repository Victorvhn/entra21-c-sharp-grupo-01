
@{
    Layout = null;
}

<div class="modal fade" id="historcioViagens-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Editar</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="nome-campo-idpacote">Pacote</label>
                        <select name="HistoricoViagem.IdPacote" type="text" id="select-editar-historico-viagem-idpacote"
                                class="form-control"></select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="nome-campo-data">Data</label>
                        <input name="HistoricoViagem.Data" type="date" id="campo-editar-historico-viagem-data" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-editar-historicoViagens">Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-editar-historicoViagens">Cadastrar</button>
            </div>

        </div>
    </div>
</div>


