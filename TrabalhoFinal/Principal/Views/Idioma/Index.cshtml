
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}



<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-book-alt"></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.TabelaIdiomas</h4>
                    <span>@Principal.Resources.Resource.TelaGerenciamentoIdiomas</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-idioma">
                    <i class="icofont icofont-plus"></i>
                    @Principal.Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap dataTable" style="width:100%" id="table-idiomas">
                <thead>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Idioma</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Idioma</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Idioma/ModalCadastro.cshtml")
@Html.Partial("~/Views/Idioma/ModalEditar.cshtml")

@section script{
<script src="~/Scripts/MultiIdioma/multi-idioma.js"></script>
<script type="text/javascript">
    loadStrings('Idioma');
</script>

    <script src="~/Scripts/Idioma/idioma-tabela.js"></script>
}