
@{
    /**/

    Layout = null;
}

<div class="modal fade" id="idioma-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar Idioma</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-cadastro-idioma" method="post">
                    <div class="form-group col-md-6">
                        <label for="select-cadastro-idioma">Idioma</label>
                        <input name="idioma.Nome" type="text" id="campo-cadastro-idioma" class="form-control" required/>
                    </div>
                </form>


                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-cadastro-idioma">Fechar</button>
                    <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-idioma">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
