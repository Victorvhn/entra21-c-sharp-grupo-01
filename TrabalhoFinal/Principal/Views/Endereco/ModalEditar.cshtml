
@{
    Layout = null;
}
<div class="modal fade" id="endereco-modal-editar" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.EditarEnderecos</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-modal-editar-endereco" method="post">
                    <input type="hidden" name="endereco.Id" id="campo-editar-endereco-id" />

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="campo-editar-endereco-logradouro">CEP <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" name="endereco.Cep" id="campo-editar-endereco-cep" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-editar-endereco-logradouro">Logradouro <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" id="campo-editar-endereco-logradouro" name="endereco.Logradouro" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label for="campo-editar-endereco-numero">Número <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" name="endereco.Numero" id="campo-editar-endereco-numero" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-editar-endereco-complemento">Complemento</label>
                            <input class="form-control" name="endereco.Complemento" id="campo-editar-endereco-complemento"  />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-editar-endereco-referencia">Referência</label>
                            <input class="form-control" name="endereco.Referencia" id="campo-editar-endereco-referencia"  />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="select-editar-endereco-cidade">Cidade <span class="text-danger font-weight-bold">*</span></label>
                            <select class="from-control" name="endereco.IdCidade" id="select-editar-endereco-cidade" ></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-editar-endereco">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-editar-endereco">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>

