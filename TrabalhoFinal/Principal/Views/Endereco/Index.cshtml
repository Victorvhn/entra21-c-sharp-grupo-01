
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";

}

<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-location-pin "></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.Endereco</h4>
                    <span>Tela de gerenciamento de Endereços</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-endereco">
                    <i class="icofont icofont-plus"></i>
                    Cadastrar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap dataTable" id="table-endereco">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Cep</th>
                        <th>Logradouro</th>
                        <th>Cidade</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>Código</th>
                        <th>Cep</th>
                        <th>Logradouro</th>
                        <th>Cidade</th>
                        <th>Ação</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Endereco/ModalCadastro.cshtml")
@Html.Partial("~/Views/Endereco/ModalEditar.cshtml")

@section script{
    <script src="~/Scripts/MultiIdioma/multi-idioma.js"></script>
    <script type="text/javascript">
        loadStrings('Endereco');
    </script>
    <script src="~/Scripts/Endereco/endereco-table.js"></script>
    <script src="~/Scripts/PopularSelects/SelectEndereco/popular-select-endereco.js"></script>
}