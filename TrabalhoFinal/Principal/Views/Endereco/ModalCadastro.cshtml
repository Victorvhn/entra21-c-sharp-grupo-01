
@{
    Layout = null;
}

<div class="modal fade" id="endereco-modal-cadastro" tabindex="-1" role="dialog"style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.CadastroEndereco</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-modal-cadastro-endereco" method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>CEP <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" name="endereco.Cep" id="campo-cadastro-endereco-cep" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-cadastro-endereco-logradouro">@Principal.Resources.Resource.Logradouro <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" id="campo-cadastro-endereco-logradouro" name="endereco.Logradouro"  />
                        </div>
                        <div class="col-md-3 form-group">
                            <label for="campo-cadastro-endereco-numero">@Principal.Resources.Resource.Numero <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" name="endereco.Numero" id="campo-cadastro-endereco-numero"  />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-cadastro-endereco-complemento">@Principal.Resources.Resource.Complemento</label>
                            <input class="form-control" name="endereco.Complemento" id="campo-cadastro-endereco-complemento" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="campo-cadastro-endereco-referencia">@Principal.Resources.Resource.Referencia</label>
                            <input class="form-control" name="endereco.Referencia" id="campo-cadastro-endereco-referencia"  />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="select-cadastro-endereco-cidade">@Principal.Resources.Resource.Cidade <span class="text-danger font-weight-bold">*</span></label>
                            <select class="from-control" name="endereco.IdCidade" id="select-cadastro-endereco-cidade" ></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" id="botao-fechar-modal-cadastro-endereco">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light" id="botao-salvar-modal-cadastrar-endereco">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div> 


