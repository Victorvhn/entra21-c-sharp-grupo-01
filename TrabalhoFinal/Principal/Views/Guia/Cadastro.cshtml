@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div>
    <div class="col-md-12">
        <h5 class="text-primary text-center">Cadastro de Guia</h5>
    </div>
</div>

<form action="/Guia/Store" method="post"> 
    <div class="col">
        <label for="campo-nome">Nome</label>
        <input name="Guia.Nome" type="text" id="campo-nome" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-sobrenome">Sobrenome</label>
        <input name="Guia.Sobrenome" type="text" id="campo-sobrenome" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-data-nascimento">Data de Nascimento</label>
        <input name="Guia.DataNascimento" type="date" id="campo-data-nascimento" class="form-control-default" " />
    </div>

    <div class="form-group">
        <input name="Guia.Sexo" type="radio" id="campo-sexo" value="true" class="form-control-default" />
        <label for="campo-sexo">Homem</label>


        <input name="Guia.Sexo" type="radio" id="campo-sexo" value="false" class="form-control-default" />
        <label for="campo-sexo">Mulher</label>
    </div>

    <div class="form-group">
        <label for="campo-rg">RG</label>
        <input name="Guia.Rg" type="text" id="campo-rg" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-cpf">CPF</label>
        <input name="Guia.Cpf" type="text" id="campo-cpf" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-numero-carteira-trabalho">Número Carteira de Trabalho</label>
        <input name="Guia.CarteiraTrabalho" type="text" id="campo-numero-carteira-trabalho" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-salario">Salário</label>
        <input name="Guia.Salario" type="text" id="campo-salario" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-categoria-habilitacao">Categoria da Habilitação</label>
        <input type="text" id="campo-categoria-habilitacao" class="form-control-default" />
    </div>

    <div class="form-group">
        <label for="campo-rank">Rank</label>
        <input name="Guia.Rank" type="text" id="campo-rank" class="form-control-default" />
    </div>

    <div>
        <button type="submit" class="btn btn-success float-left icomn">Cadastrar</button>
    </div>
</form>

