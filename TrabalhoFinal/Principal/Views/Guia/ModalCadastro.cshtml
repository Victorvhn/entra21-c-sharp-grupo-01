@{
    Layout = null;
}

<div class="modal fade" id="guia-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.CadastrarGuia</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            
            <div class="modal-body">

                <form id="form-modal-cadastro-guia" method="post">
                    <div>
                        <h5>@Principal.Resources.Resource.DadosPessoais</h5>
                    </div>
                        <hr />

                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="campo-cadastro-guia-nome">@Principal.Resources.Resource.Nome  <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.Nome" type="text" id="campo-cadastro-guia-nome" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="campo-cadastro-guia-sobrenome">@Principal.Resources.Resource.Sobrenome <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.Sobrenome" type="text" id="campo-cadastro-guia-sobrenome" class="form-control" />
                        </div>

                    
                        <div class="form-group col-sm-4">
                            <label for="campo-cadastro-guia-rg">RG</label>
                            <input name="guia.Rg" type="text" id="campo-cadastro-guia-rg" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-cadastro-guia-cpf">CPF <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.Cpf" type="text" id="campo-cadastro-guia-cpf" class="form-control" />
                        </div>

                        <div class="form-group col">
                            <label for="campo-cadastro-guia-data-nascimento">@Principal.Resources.Resource.DataNascimento <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.DataNascimento" type="date" id="campo-cadastro-guia-data-nascimento" class="form-control"  />
                        </div>
                    
                        <div class="form-group col-md-4">
                            <label for="campo-cadastro-guia-sexo">@Principal.Resources.Resource.Sexo  <span class="text-danger font-weight-bold">*</span></label>
                            <div>
                                <input type="radio" id="radio-sexo-masculino" name="sexo" class="radio-outline" value="M" />
                                <label for="radio-sexo-masculino">@Principal.Resources.Resource.Masculino</label>
                                <input type="radio" id="radio-sexo-feminino" name="sexo" class="ml-md-5" value="F" />
                                <label for="radio-sexo-feminino">@Principal.Resources.Resource.Feminino</label>
                            </div>
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-cadastro-guia-numero-carteira-trabalho">@Principal.Resources.Resource.NumeroCarteiraTrabalho <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.CarteiraTrabalho" type="text" id="campo-cadastro-guia-numero-carteira-trabalho"
                                   class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-cadastro-guia-salario">@Principal.Resources.Resource.Salario  <span class="text-danger font-weight-bold">*</span></label>
                            <input name="guia.Salario" type="text" id="campo-cadastro-guia-salario" class="form-control" />
                        </div>

                    
                        <div class="form-group col-md-4">
                            <label for="campo-cadastro-guia-categoria-habilitacao">@Principal.Resources.Resource.CarteiradeHabilitacao <span class="text-danger font-weight-bold">*</span></label>
                            <select id="campo-cadastro-guia-categoria-habilitacao" name="guia.CategoriaHabilitacao" class="form-control">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="E">E</option>
                                <option value="AB">AB</option>
                                <option value="AC">AC</option>
                                <option value="AE">AE</option>
                                <option value="AD">AD</option>
                                <option value="BC">BC</option>
                                <option value="BE">BE</option>
                                <option value="BD">BD</option>
                                <option value="DC">DC</option>
                                <option value="DE">DE</option>
                                <option value="ABC">ABC</option>
                                <option value="ABCD">ABCD</option>
                                <option value="ABCDE">ABCDE</option>
                            </select>
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-cadastro-guia-rank">@Principal.Resources.Resource.Rank</label>
                            <select name="guia.Rank" id="campo-cadastro-guia-rank" class="form-control">
                                <option disabled="disabled" selected="selected">- Selecione o Rank -</option>
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>

                    </div>

                    <br />

                    <div >
                        <h5>@Principal.Resources.Resource.Endereco</h5>
                    </div>

                        <hr />

                    <div class="row">

                        <div class="form-group col-md-6">

                            <label for="select-cadastro-guia-estado">@Principal.Resources.Resource.Estado  <span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control" name="cidade.IdEstado" id="select-cadastro-guia-estado"></select>

                        </div>

                        <div class="form-group col-md-6">

                            <label for="select-cadastro-cidade-guia">@Principal.Resources.Resource.Cidade<span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control" name="select-cadastro-guia-cidade" id="select-cadastro-cidade-guia"></select>

                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">

                            <label for="cep">CEP  <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" type="text" name="endereco.Cep" id="campo-cep-cadastro-guia" />

                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-8">

                            <label for="logradouro">@Principal.Resources.Resource.Logradouro  <span class="text-danger font-weight-bold">*</span></label>
                            <input name="endereco.Logradouro" type="text" id="campo-logradouro-cadastro-guia" size="150" class="form-control"  readonly="readonly"/>

                        </div>

                        <div class="form-group col-md-4">

                            <label for="campo-numero-cadastro-guia">@Principal.Resources.Resource.Numero <span class="text-danger font-weight-bold">*</span></label>
                            <input id="campo-numero-cadastro-guia" name="endereco.Numero" type="text" class="form-control">
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-8">

                            <label for="bairro">@Principal.Resources.Resource.Bairro  <span class="text-danger font-weight-bold">*</span></label>
                            <input id="campo-complemento-guia-cadastro" name="endereco.Bairro" type="text" class="form-control"  readonly="readonly">

                        </div>

                        <div class="form-group col-md-4">

                            <label for="campo-referencia-guia-cadastro">@Principal.Resources.Resource.Referencia</label>
                            <input id="campo-referencia-guia-cadastro" name="endereco.Referencia" class="form-control">

                        </div>

                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-cadastro-guia">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-guia">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>
