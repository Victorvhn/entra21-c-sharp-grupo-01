@{
    Layout = null;
}

<div class="modal fade" id="guia-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">                

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="campo-nome">Nome</label>
                        <input name="guia.Nome" type="text" id="campo-cadastro-guia-nome" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="campo-sobrenome">Sobrenome</label>
                        <input name="guia.Sobrenome" type="text" id="campo-cadastro-guia-sobrenome" class="form-control" />
                    </div>

                    <div class="form-group col-sm-4">
                        <label for="campo-rg">RG</label>
                        <input name="guia.Rg" type="text" id="campo-cadastro-guia-rg" class="form-control" />
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="campo-cpf">CPF</label>
                        <input name="guia.Cpf" type="text" id="campo-cadastro-guia-cpf" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <label for="campo-data-nascimento">Data de Nascimento</label>
                        <input name="guia.DataNascimento" type="date" id="campo-cadastro-guia-data-nascimento" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <label for="campo-sexo">Sexo</label>
                        <select id="campo-cadastro-guia-sexo" name="guia.Sexo" class="form-control" required="required">
                            <option disabled="disabled" selected="selected">Sexo</option>
                            <option value="Homem">Masculino</option>
                            <option value="Mulher">Feminino</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="campo-numero-carteira-trabalho">Número Carteira de Trabalho</label>
                        <input name="guia.CarteiraTrabalho" type="text" id="campo-cadastro-guia-numero-carteira-trabalho"
                               class="form-control" />
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="campo-salario">Salário</label>
                        <input name="guia.Salario" type="text" id="campo-cadastro-guia-salario" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="campo-categoria-habilitacao">Categoria da Habilitação</label>
                        <select id="campo-cadastro-guia-categoria-habilitacao" name="guia.CategoriaHabilitacao" class="form-control" required="required">
                            <option disabled="disabled" selected="selected">- Selecione uma Categoria -</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="AB">AB</option>
                            <option value="AC">AC</option>
                            <option value="AE">AE</option>
                            <option value="AD">AD</option>
                            <option value="BC">BC</option>
                            <option value="BE">BE</option>
                            <option value="BD">BD</option>
                            <option value="DC">DC</option>
                            <option value="DE">DE</option>
                            <option value="ABC">ABC</option>
                            <option value="ABCD">ABCD</option>
                            <option value="ABCDE">ABCDE</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="campo-rank">Rank</label>
                        <select name="guia.Rank" type="text" id="campo-cadastro-guia-rank" class="form-control">
                            <option disabled="disabled" selected="selected">- Selecione o Rank -</option>
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>

                    <label for="campo-cadastro-endereco-cep">Cep</label>
                    <input name="endereco.Cep" type="text" id="campo-cadastro-endereco-cep" size="10" maxlength="8" class="form-control form-control-default" />
                    <label for="campo-cadastro-endereco-logradouro">Logradouro</label>
                    <input name="endereco.Logradouro" type="text" id="campo-cadastro-endereco-logradouro" size="150" class="form-control form-control-default" />
                    <label for="campo-cadastro-endereco-numero">Número</label>
                    <input id="campo-cadastro-endereco-numero" name="endereco.Numero" type="text" class="form-control autonumber" data-a-sep="." data-a-dec=",">
                    <label for="campo-cadastro-endereco-complemento">Complemento</label>
                    <input id="campo-cadastro-endereco-complemento" name="endereco.Complemento" type="text" class="form-control">
                    <label for="campo-cadastro-endereco-referencia">Referência</label>
                    <input id="campo-cadastro-endereco-referencia" name="endereco.Referencia" class="form-control">

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-cadastro-guia">Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-guia">Cadastrar</button>
            </div>
        </div>
    </div>
</div>