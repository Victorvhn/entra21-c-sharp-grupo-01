
@{
    Layout = null;
}

<div class="modal fade" id="guia-modal-editar" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Editar Guia</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-editar-guia" method="post">
                    <input type="hidden" id="campo-editar-guia-id" value="" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="campo-nome">Nome <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.Nome" type="text" id="campo-editar-guia-nome" class="form-control" value="" />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="campo-sobrenome">Sobrenome <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.Sobrenome" type="text" id="campo-editar-guia-sobrenome" class="form-control" value="" />
                        </div>


                        <div class="form-group col-sm-4">
                            <label for="campo-rg">RG</label>
                            <input name="Guia.Rg" type="text" id="campo-editar-guia-rg" class="form-control" value="" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-cpf">CPF <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.Cpf" type="text" id="campo-editar-guia-cpf" class="form-control" value="" />
                        </div>

                        <div class="form-group col">
                            <label for="campo-data-nascimento">Data de Nascimento <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.DataNascimento" type="date" id="campo-editar-guia-data-nascimento" class="form-control" value="" />
                        </div>

                        <div class="form-group col">
                            <label for="campo-sexo">Sexo <span class="text-danger font-weight-bold">*</span></label>
                            <select id="campo-editar-guia-sexo" name="Guia.Sexo" class="form-control" required="required">
                                <option disabled="disabled" selected="selected">Sexo</option>
                                <option value="Homem">Masculino</option>
                                <option value="Mulher">Feminino</option>
                            </select>
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-numero-carteira-trabalho">Número Carteira de Trabalho <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.CarteiraTrabalho" type="text" id="campo-editar-guia-numero-carteira-trabalho"
                                   class="form-control" value="" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-salario">Salário <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Guia.Salario" type="text" id="campo-editar-guia-salario" class="form-control" value="" />
                        </div>

                        <div class="form-group col-md-4">
                            <label for="campo-categoria-habilitacao">Categoria da Habilitação <span class="text-danger font-weight-bold">*</span></label>
                            <select id="campo-editar-guia-categoria-habilitacao" name="Guia.CategoriaHabilitacao" class="form-control" required="required">
                                <option disabled="disabled" selected="selected">- Selecione uma Categoria -</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="AB">AB</option>
                                <option value="AC">AC</option>
                                <option value="AE">AE</option>
                                <option value="AD">AD</option>
                                <option value="BC">BC</option>
                                <option value="BE">BE</option>
                                <option value="BD">BD</option>
                                <option value="DC">DC</option>
                                <option value="DE">DE</option>
                                <option value="ABC">ABC</option>
                                <option value="ABCD">ABCD</option>
                                <option value="ABCDE">ABCDE</option>
                            </select>
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="campo-rank">Rank</label>
                            <select name="Guia.Rank" type="text" id="campo-editar-guia-rank" class="form-control">
                                <option disabled="disabled" selected="selected">- Selecione o Rank -</option>
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <h5>Endereço</h5> <br /><br />
                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">

                            <label for="select-cadastro-guia-estado">Estado  <span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control" name="cidade.IdEstado" id="select-editar-guia-estado"></select>

                        </div>

                        <div class="form-group col-md-6">

                            <label for="select-cadastro-cidade-guia">Cidade  <span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control" name="select-editar-guia-cidade" id="select-editar-guia-cidade"></select>

                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">

                            <label for="cep">CEP  <span class="text-danger font-weight-bold">*</span></label>
                            <input class="form-control" type="text" name="endereco.Cep" id="campo-cep-editar-guia" />

                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-8">

                            <label for="logradouro">Logradouro  <span class="text-danger font-weight-bold">*</span></label>
                            <input name="endereco.Logradouro" type="text" id="campo-logradouro-editar-guia" size="150" class="form-control" />

                        </div>

                        <div class="form-group col-md-4">

                            <label for="campo-numero-editar-guia">Número <span class="text-danger font-weight-bold">*</span></label>
                            <input id="campo-numero-editar-guia" name="endereco.Numero" type="text" class="form-control">
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-8">

                            <label for="bairro">Bairro  <span class="text-danger font-weight-bold">*</span></label>
                            <input id="campo-complemento-guia-editar" name="endereco.Bairro" type="text" class="form-control">

                        </div>

                        <div class="form-group col-md-4">

                            <label for="campo-referencia-guia-editar">Referência</label>
                            <input id="campo-referencia-guia-editar" name="endereco.Referencia" class="form-control">

                        </div>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-editar-guia">Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-acao-editar-guia">Cadastrar</button>
            </div>
        </div>
    </div>
</div>