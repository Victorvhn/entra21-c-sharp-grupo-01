
@{
    Layout = null;
}

<div class="modal fade" id="pontoturistico-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar ponto turistico</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-cadastro-ponto-turistico" method="post">
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="select-endereco-ponto-turistico">Endereço <span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control form-control-default" name="pontoTuristico.IdEndereco" id="select-modal-cadastro-estado"></select>

                        </div>

                        <div class="form-group col-md-6">
                            <label for="cadastro-pontoTuristico-campo-nome">Ponto Turistico <span class="text-danger font-weight-bold">*</span></label>
                            <input type="text" id="campo-cadastro-pontoturistico-nome" class="form-control" name="pontoTuristico.Nome">
                        </div>

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-cadastro-pontoturistico">Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-pontoturistico">Cadastrar</button>
            </div>
        </div>
    </div>
</div>

