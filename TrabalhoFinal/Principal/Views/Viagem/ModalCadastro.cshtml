
@{
    Layout = null;
}

<div class="modal fade" id="viagem-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.CadastroViagem</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-cadastro-viagem" method="post">
                    <div class="row mb-md-3">

                        <div class="col-md-6">

                            <label for="select-cadastro-viagem-pacote">@Principal.Resources.Resource.Pacote <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-cadastro-viagem-pacote" name="viagem.IdPacote" class="form-control"></select>

                        </div>

                        <div class="col-md-6">

                            <label for="select-cadastro-viagem-guia">@Principal.Resources.Resource.Guia <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-cadastro-viagem-guia" name="viagem.IdGuia" class="form-control"></select>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">

                            <label for="campo-cadastro-data-saida-viagem">@Principal.Resources.Resource.DataHorarioIda <span class="text-danger font-weight-bold">*</span></label>
                            <input type="datetime-local" class="form-control" name="viagem.DataHorarioSaida" id="campo-cadastro-data-saida-viagem">

                        </div>

                        <div class="col-md-6">

                            <label for="campo-cadastro-data-volta-viagem">@Principal.Resources.Resource.DataHorarioVolta <span class="text-danger font-weight-bold">*</span></label>
                            <input type="datetime-local" class="form-control" name="viagem.DataHorarioVolta" id="campo-cadastro-data-volta-viagem">

                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" id="botao-fechar-modal-cadastro-viagem">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-viagem">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>