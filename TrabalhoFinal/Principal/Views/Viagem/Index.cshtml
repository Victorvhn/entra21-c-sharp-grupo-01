
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}



<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-airplane-alt"></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.TabelaViagens</h4>
                    <span>@Principal.Resources.Resource.TelaGerenciamentoViagens</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-viagem">
                    <i class="icofont icofont-plus"></i>
                    @Principal.Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered nowrap" id="table-viagens">
                <thead>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Pacote</th>
                        <th>@Principal.Resources.Resource.Guia</th>
                        <th>@Principal.Resources.Resource.DataHorarioIda</th>
                        <th>@Principal.Resources.Resource.DataHorarioVolta</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Pacote</th>
                        <th>@Principal.Resources.Resource.Guia</th>
                        <th>@Principal.Resources.Resource.DataHorarioIda</th>
                        <th>@Principal.Resources.Resource.DataHorarioVolta</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Viagem/ModalCadastro.cshtml")
@Html.Partial("~/Views/Viagem/ModalEditar.cshtml")

@section script{
    <script type="text/javascript">
        loadStrings('Viagem');
    </script>
    <script src="~/Scripts/Viagem/index-viagem.js"></script>
    <script src="~/Scripts/PopularSelects/SelectViagem/popular-select-viagem.js"></script>
}