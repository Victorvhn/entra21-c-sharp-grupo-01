
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<form action="/Viagem/Update" method="post">
    <input type="hidden" name="viagem.Id" value="@ViewBag.Viagem.Id" id="editar-viagem-campo-id" />
    <div class="form-group">
        <label for="cadastro-viagem-campo-nome">Nome</label>
        <input type="text" id="editar-campo-viagem-campo-nome" class="form-control" value="@ViewBag.Viagem.Nome" name="viagem.Nome" />

    </div>

    <div>
        <button type="submit" class="btn btn-sucess float-right">
            <i class="fa fa-save">Cadastrar</i>
        </button>
    </div>
</form>
