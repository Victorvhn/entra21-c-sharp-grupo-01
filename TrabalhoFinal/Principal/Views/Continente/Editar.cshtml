
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Editar</h2>


<form action="/Continente/Update" method="post">
    <input type="hidden" name="continente.Id" value="@ViewBag.Continente.Id" />
    <div class="form-group">
        <label for="cadastro-continente-campo-nome">
            Nome
        </label>
        <input type="text" id="cadastro-continente-campo-nome" class="form-control" value="@ViewBag.Continente.Nome" name="continente.Nome" />
    </div>

    <div>
        <button type="submit" class="btn btn-success float-right">
            <i class="fa fa-save"></i> Cadastrar
        </button>
    </div>
</form>