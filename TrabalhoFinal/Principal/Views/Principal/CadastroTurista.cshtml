@{
    ViewBag.Title = "CadastroTurista";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">

    <div class="col-md-10 offset-md-1">
        <form action="/Principal/StoreEndereco" method="post">

            <div class="form-horizontal">
                <div class="card">

                    <div class="card-header">

                        <h4>Endereco</h4>

                    </div>

                    <div class="card-block">

                        <div class="row">

                            <div class="col-md-12">

                                <div class="form-group">

                                    <div class="col-md-12">

                                        <label>Nome</label>
                                        <input type="text" name="Turista.Nome" class="form-control"
                                    </div>

                                </div>


                                <div class="form-group">

                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Salvar" class="btn btn-outline-success" />
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </form>


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>