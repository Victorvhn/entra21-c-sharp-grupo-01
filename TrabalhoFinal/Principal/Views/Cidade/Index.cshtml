
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}


<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-building-alt "></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.TabelaCidades</h4>
                    <span>@Principal.Resources.Resource.TelaGerenciamentoCidade</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-cidade">
                    <i class="icofont icofont-plus"></i>
                    @Principal.Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap dataTable" id="table-cidade">
                <thead>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Estado</th>
                        <th>@Principal.Resources.Resource.Cidade</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Estado</th>
                        <th>@Principal.Resources.Resource.Cidade</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


@Html.Partial("~/Views/Cidade/ModalCadastro.cshtml")
@Html.Partial("~/Views/Cidade/ModalEditar.cshtml")


@section script{
<script src="~/Scripts/MultiIdioma/multi-idioma.js"></script>
<script type="text/javascript">
    loadStrings('Cidade');
</script>

    <script src="~/Scripts/Cidade/cidade-index.js"></script>
    <script src="~/Scripts/PopularSelects/SelectCidade/popular-select-cidade.js"></script>
}
