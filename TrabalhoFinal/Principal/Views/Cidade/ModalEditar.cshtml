
@{
    Layout = null;
}

<div class="modal fade" id="cidade-modal-editar" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <input type="hidden" name="cidade.Id" id="campo-editar-cidade-id"/>

                <div class="form-group">

                    <label class="col-md-2">
                        Estado
                    </label>
                    <div class="col-md-6">
                        <select class="form-control form-control-default" name="cidade.IdEstado" id="select-modal-editar-cidade"></select>
                    </div>

                </div>

                <div class="form-group">

                    <label for="cadastro-cidade-campo-nome">
                        Nome
                    </label>
                    <input type="text" id="campo-editar-cidade-nome" class="form-control" name="cidade.Nome">

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-editar-cidade">Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-editar-cidade">Cadastrar</button>
            </div>
        </div>
    </div>
</div>