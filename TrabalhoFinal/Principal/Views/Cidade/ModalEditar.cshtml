
@{
    Layout = null;
}

<div class="modal fade" id="cidade-modal-editar" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.EditarCidade</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-editar-cidade" method="post">
                    <input type="hidden" name="cidade.Id" id="campo-editar-cidade-id" />

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>@Principal.Resources.Resource.Estado <span class="text-danger font-weight-bold">*</span></label>
                            <select class="form-control form-control-default" name="cidade.IdEstado" id="select-modal-editar-cidade"></select>
                        </div>

                        <div class="col-md-6">
                            <label for="cadastro-cidade-campo-nome">@Principal.Resources.Resource.Cidade <span class="text-danger font-weight-bold">*</span></label>
                            <input type="text" id="campo-editar-cidade-nome" class="form-control" name="cidade.Nome">
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-editar-cidade">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-editar-cidade">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>
