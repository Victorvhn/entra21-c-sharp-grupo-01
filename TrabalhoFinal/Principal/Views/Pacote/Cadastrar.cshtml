@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div>
    <div class="col-md-12">
        <h1 class="text-primary text-center">Cadastro  Pacote</h1>
        <br />
    </div>
</div>

<form action="/Pacote/Store" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="cadastro-pacote-campo-nome">Nome </label>
            <input name="Pacote.Nome" type="text" id="cadastro-pacote-campo-nome" class="form-control" 
                   value="@ViewBag.Pacote.Nome"  />
        </div>

        <div class="form-group col-md-4">
            <label for="cadastro-pacote-campo-valor">
                Valor
            </label>
            <input name="Pacote.Valor" type="text" id="cadastro-pacote-campo-valor" class="form-control" 
                   value="@ViewBag.Pacote.Valor"  />
        </div>

        <div class="form-group col-md-4">
            <label for="cadastro-pacote-campo-percentual-desconto">
                Percentual De Desconto
            </label>
            <input name="Pacote.PercentualMaximoDesconto" type="text" id="cadastro-pacote-campo-percentual-desconto" class="form-control" 
                   value="@ViewBag.Pacote.PercentualMaximoDesconto" >
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-outline-success float-right">
                <i class="fa fa-save"></i> Cadastrar
            </button>
        </div>

    </div>
</form>