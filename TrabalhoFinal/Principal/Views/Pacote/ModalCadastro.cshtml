
@{

    Layout = null;
}

<div class="modal fade" id="pacote-modal-cadastro" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.CadastrarPacote</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-cadastro-pacote" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="cadastro-pacote-campo-nome">@Principal.Resources.Resource.Pacote <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Pacote.Nome" type="text" id="campo-cadastro-pacote-nome" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="cadastro-pacote-campo-valor">@Principal.Resources.Resource.Valor <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Pacote.Valor" type="text" id="campo-cadastro-pacote-valor" class="form-control" />
                        </div>

                        <div class="form-group col-md-4">
                            <label for="cadastro-pacote-campo-percentual-desconto">@Principal.Resources.Resource.PercentualDescontoPreenchido <span class="text-danger font-weight-bold">*</span></label>
                            <input name="Pacote.PercentualMaximoDesconto" type="text" id="campo-cadastro-percentualMaximoDesconto" class="form-control">
                        </div>

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-cadastro-pacote">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-cadastrar-pacote">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>

