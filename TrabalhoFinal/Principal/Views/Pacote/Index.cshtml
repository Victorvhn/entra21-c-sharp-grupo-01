
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}


<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-social-dropbox"></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.TabelaPacotes</h4>
                    <span>@Principal.Resources.Resource.TelaGerenciamentoPacotes</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-pacote">
                    <i class="icofont icofont-plus"></i>
                    @Principal.Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-bordered nowrap dataTable" id="pacote-tabela">
                <thead>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Nome</th>
                        <th>@Principal.Resources.Resource.Valor</th>
                        <th>@Principal.Resources.Resource.Desconto</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Nome</th>
                        <th>@Principal.Resources.Resource.Valor</th>
                        <th>@Principal.Resources.Resource.Desconto</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Pacote/ModalCadastro.cshtml")
@Html.Partial("~/Views/Pacote/ModalEditar.cshtml")

@section script{
    <script type="text/javascript">
        loadStrings('Pacote');
    </script>

    <script src="~/Scripts/Pacote/pacote-tabela.js"></script>
    <script src="~/Content/lib/jquery-validation/js/jquery.validate.js"></script>
}
