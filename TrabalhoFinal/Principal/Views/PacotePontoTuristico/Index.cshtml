
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}


<div class="page-header card horizontal-layout-icon">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont-social-dropbox"></i>
                <div class="d-inline">
                    <h4>@Principal.Resources.Resource.TabelaPPT</h4>
                    <span>@Principal.Resources.Resource.TelaGerenciamentoPPT</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <button type="button" class="btn btn-grd-primary" id="botao-modal-cadastrar-pacote-ponto-turistico">
                    <i class="icofont icofont-plus"></i>
                    @Principal.Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered nowrap" id="table-pacote-ponto-turistico">
                <thead>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Pacote</th>
                        <th>@Principal.Resources.Resource.PontoTuristico</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th>@Principal.Resources.Resource.Codigo</th>
                        <th>@Principal.Resources.Resource.Pacote</th>
                        <th>@Principal.Resources.Resource.PontoTuristico</th>
                        <th>@Principal.Resources.Resource.Acao</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@Html.Partial("~/Views/PacotePontoTuristico/ModalCadastro.cshtml")
@Html.Partial("~/Views/PacotePontoTuristico/ModalEditar.cshtml")

@section script{
    <script type="text/javascript">
        loadStrings('PacotePontoTuristico');
    </script>
    <script src="~/Scripts/PacotePontoTuristico/index-pacote-ponto-turistico.js"></script>
    <script src="~/Scripts/PopularSelects/SelectPacotePontoTuristico/popular-select-pacote-ponto-turistico.js"></script>
}


