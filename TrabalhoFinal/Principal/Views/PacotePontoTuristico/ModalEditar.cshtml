@{
    Layout = null;
}

<div class="modal fade" id="pacote-ponto-turistico-modal-editar" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Principal.Resources.Resource.EditarPPT</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-modal-editar-pacote-ponto-turistico" method="post">

                    <input type="hidden" name="pacotePontoTuristico.Id" id="campo-editar-pacote-ponto-turistico-id" />

                    <div class="row">
                        <div class="col-md-12">
                            <label for="select-editar-pacote-ponto-turistico-pacote">@Principal.Resources.Resource.Pacote <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-editar-pacote-ponto-turistico-pacote" class="form-control"></select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="select-editar-pacote-ponto-turisto-ponto-turistico">@Principal.Resources.Resource.PontoTuristico <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-editar-pacote-ponto-turisto-ponto-turistico" name="pacotePontoTuristico.IdPontoTuristico" class="form-control"></select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" id="botao-fechar-modal-cadastro-pacote-ponto-turistico">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-modal-editar-pacote-ponto-turistico">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>

