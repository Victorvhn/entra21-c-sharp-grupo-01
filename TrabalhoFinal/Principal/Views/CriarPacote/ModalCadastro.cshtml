
@{
    Layout = null;
}


<div class="modal fade" id="modal-cadastro-pacote-user" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal Pacote</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <span>Pacote</span>
                </div>

                <div class="row">
                    <div class="form-group col-md-8">

                        <label>Nome Pacote</label>
                        <input type="text" name="pacote.Nome" id="cadastro-pacote-nome-user" class="form-control" />

                    </div>

                    <div class="form-group col-md-4">

                        <label>Destino</label>
                        <select id="select-destino-pacote-user" class="form-control" name="guia.Id"></select>

                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-md-6">

                        <label>Data e Horário de Ida</label>
                        <input type="datetime-local" id="campo-data-horario-saida-cadastro-user" name="" class="form-control" />

                    </div>

                    <div class="form-group col-md-6">

                        <label>Data e Horário de Volta</label>
                        <input type="datetime-local" id="campo-data-horario-saida-cadastro-user" name="" class="form-control" />

                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-md-6">

                        <label>Guia</label>
                        <select id="select-guia-pacote-user" name="viagem.IdGuia" class="form-control"></select>

                    </div>

                    <div class="form-group col-md-6">

                        <label>Pontos Turísticos</label>
                        <select id="select-pontos-turisticos-cadastro-user" name="" class="form-control" multiple="multiple"></select>

                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-md-2">

                        <label>Valor Total: R$</label>

                    </div>

                    <div class="form-group col-md-10">

                        <label></label>

                    </div>

                </div>
