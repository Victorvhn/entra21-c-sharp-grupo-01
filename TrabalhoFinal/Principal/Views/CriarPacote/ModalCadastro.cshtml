
@{
    Layout = null;
}


<div class="modal fade" id="modal-cadastro-pacote-user" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar Pacote</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form-modal-cadastro-pacote-usuario" method="post">
                    <div>
                        <span>@Principal.Resources.Resource.Pacote</span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-8">

                            <label>@Principal.Resources.Resource.PacoteNome<span class="text-danger font-weight-bold">*</span></label>
                            <input type="text" name="pacote.Nome" id="cadastro-pacote-nome-user" class="form-control" />

                        </div>

                        <div class="form-group col-md-4">

                            <label>Destino <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-destino-pacote-user" class="form-control" name="select-destino">
                                <option value="" selected="selected">Selecione um destino</option>
                                <option value="1">@Principal.Resources.Resource.Africa</option>
                                <option value="2">@Principal.Resources.Resource.America</option>
                                <option value="3">@Principal.Resources.Resource.Asia</option>
                                <option value="4">@Principal.Resources.Resource.Europa</option>
                                <option value="5">@Principal.Resources.Resource.Oceania</option>
                            </select>

                        </div>
                    </div>

                    <div>
                        <span>@Principal.Resources.Resource.Viagem</span>
                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">

                            <label>@Principal.Resources.Resource.DataHorarioIda <span class="text-danger font-weight-bold">*</span></label>
                            <input type="datetime-local" id="campo-data-horario-saida-cadastro-user" name="campo-data-horario-saida-cadastro-user" class="form-control" />

                        </div>

                        <div class="form-group col-md-6">

                            <label>@Principal.Resources.Resource.DataHorarioVolta <span class="text-danger font-weight-bold">*</span></label>
                            <input type="datetime-local" id="campo-data-horario-retorno-cadastro-user" name="campo-data-horario-retorno-cadastro-user" class="form-control" />

                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">

                            <label>@Principal.Resources.Resource.Guia <span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-guia-pacote-user" name="viagem.IdGuia" class="form-control"></select>

                        </div>

                        <div class="form-group col-md-6">

                            <label>@Principal.Resources.Resource.PontosTuristicos<span class="text-danger font-weight-bold">*</span></label>
                            <select id="select-pontos-turisticos-cadastro-user" name="select-pontos-turisticos-cadastro-user" class="form-control" multiple="multiple"></select>

                        </div>
                    </div>

                    <div class="row">

                        <div class="form-group col-md-2">

                            <label>@Principal.Resources.Resource.ValorTotal</label>

                        </div>

                        <div class="form-group col-md-10">

                            <label id="campo-valor-total-pacote-user"></label>

                        </div>

                    </div>
                    <!-- cadastro pacote -->
                    <!-- select viagem -->
                    <!-- select pontos turisticos -->
                    <!-- pacotes pontos turisticos -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal" id="botao-fechar-modal-pacote-user">@Principal.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light " id="botao-salvar-pacote-user">@Principal.Resources.Resource.Cadastrar</button>
            </div>
        </div>
    </div>
</div>