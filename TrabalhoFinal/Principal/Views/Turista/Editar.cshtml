
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<form action="/CadastroTurista/Update" method="post">
    <input type="hidden" name="cadastroTurista.Id" value="@ViewBag.CadastroTurista.Id" id="editar-campo-turista-id" />
    <div class="form-group">
        <label for="cadastro-turista-campo-nome">Nome
        </label>
        <input type="text" id="editar-campo-turista-nome" class="form-control" value="@ViewBag.CadastroTurista.Nome" name="cadastroTurista.Nome" />

    </div>
    <div>
        <button type="submit" class="btn btn-success float-right">
            <i class="fa fa-save"></i> Salvar
        </button>
    </div>
</form>
